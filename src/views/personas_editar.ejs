<%- include ('partials/_header'); %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-5 offset-md-3 card">
      <div class="card-body">
        <form action="/actualizarPersona/<%= data.idPersona %>" method="POST">
          <div class="form-group">
            <input type="text" name="nombre" value="<%= data.nombre  %>"  class="form-control" autofocus>
          </div>
          <div class="form-group">
            <input type="number" name="edad" value="<%= data.edad %>" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" name="curso" value="<%= data.curso %>"  class="form-control">
          </div>

          <button type="submit" class="btn btn-primary">
            Editar
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include ('partials/_footer'); %>
